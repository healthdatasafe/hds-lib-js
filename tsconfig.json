{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "declarationMap": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noEmitOnError": false,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist", "lib", "tests", "coverage"]
}